<header>
  <div class="row">
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        
        <a class="navbar-brand" href="/">Reading Circle</a>
        
        </div>
        
        <div class="collapse navbar-collapse", id="bs-example-navbar-collapse-1">
          
          
          
          <ul class="nav navbar-nav navbar-right">
            
            <% if logged_in? %>
            
              <li>
                <%= link_to new_book_path do %>
                  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                  読書会をつくる
                <% end %>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                  <%= current_user.name %><span class="caret"></span>
                </a>
              
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to "キープした読書会", keeps_user_path(current_user) %>
                  </li>
                  <li role="separator" class="divider"></li>
                  <li>
                    <%= link_to "参加予定の読書会", entries_user_path(current_user) %>
                  </li>
                  <li role="separator" class="divider"></li>
                  <li>
                    <%= link_to "ユーザ詳細", user_path(current_user) %>
                  </li>
                  <li role="separator" class="divider"></li>
                  <li>
                    <%= link_to "ログアウト", logout_path, method: :delete %>
                  </li>
                </ul>
              </li>
            <% else %>
            
              <li><%= link_to "新規登録", new_user_path %></li>
              <li><%= link_to "ログイン", login_path %></li>
              
            <% end %>
            
          </ul>  
          
          
          <form class="navbar-form navbar-right" role="search">
              
            <div class="form-group">
              <% #以下はモノリストの検索フォームを真似してあとで変える %>
              
              <input type="text" class="form-control" placeholder="読書会名">
            </div>
            <button type="submit" class="btn btn-default">読書会をさがす
              <span class="glyphicon glyphicon-search"></span>
            </button>
              
          </form>  
            
        </div>
        
        
        
        
      </div>
    </nav>
  </div>
</header>