<ul class="media-list">
  <% microposts.each do |micropost| %>
    <li class="media">
      <div class="media-body">
        <%= link_to micropost.user.name, user_path(micropost.user) %><span class="text-muted">投稿日時<%= micropost.created_at %></span>
      </div>
      <div>
        <p><%= micropost.content %></p>
      </div>
    </li>
  <% end %>
</ul>