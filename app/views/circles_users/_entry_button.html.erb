<% if current_user.entry?(circle) %>
  <%= form_tag(circles_user_path(circle.id), method: :delete) do %>
    <%= hidden_field_tag :circle_id, circle.id %>
    <%= hidden_field_tag :type, "Entry" %>
    <%= submit_tag "参加をとりやめる", class: "btn btn-danger" %>
  <% end %>
<% else %>
  <%= form_tag(circles_users_path) do %>
    <%= hidden_field_tag :circle_id, circle.id %>
    <%= hidden_field_tag :type, "Entry" %>
    <%= submit_tag "参加する", class: "btn btn-primary" %>
  <% end %>
<% end %>